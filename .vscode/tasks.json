{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "build.bat",
            "args": [],
            "problemMatcher": {
                "owner": "Build",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+((warning|error)\\s+\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update SDCard",
            "type": "shell",            
            "command": "${workspaceFolder}/../../emulator/hdfmonkey put ${workspaceFolder}/../../sdcard/tbblue-dev.sd zopt /dot/",            
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
            ],
            "problemMatcher": []
        },
        {
            "label": "Update Rules",
            "type": "shell",            
            "command": "${workspaceFolder}/../../emulator/hdfmonkey put ${workspaceFolder}/../../sdcard/tbblue-dev.sd rules/rules.opt /",            
            "dependsOrder": "sequence",
            "dependsOn": [            
            ],
            "problemMatcher": []
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make clean all",
            "args": [],
            "problemMatcher": {
                "owner": "Make",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+((warning|error)\\s+\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },   
        {
            "label": "Make & Update SDCard",
            "type": "shell",            
            "command": "${workspaceFolder}/../../emulator/hdfmonkey put ${workspaceFolder}/../../sdcard/tbblue-dev.sd zopt /dot/",            
            "dependsOrder": "sequence",
            "dependsOn": [
                "Make",
            ],
            "problemMatcher": []
        },  
        {
            "label": "Update Test",
            "type": "shell",            
            "command": "${workspaceFolder}/sync.bat ${workspaceFolder}",            
            "dependsOrder": "sequence",
            "dependsOn": [],
            "problemMatcher": []
        },     
        {
            "label": "Launch CSpect",
            "type": "shell",
            
            "command": "${workspaceFolder}/../../emulator/CSpect.exe -esc -r -w2 -brk -zxnext -nextrom -mmc=${workspaceFolder}/../../sdcard/tbblue-dev.sd",
            
            "dependsOrder": "sequence",
            "dependsOn": [
            ]
        }        
    ]
}